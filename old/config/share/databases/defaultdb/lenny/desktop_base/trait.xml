<trait name="desktop_base">
	<parents>
		<parent>
			default
		</parent>
	</parents>
	<packages>
		<package action="install">
			comixcursors
		</package>
		<package action="install">
			desktop-base
		</package>
		<package action="install">
			desktop-file-utils
		</package>
		<package action="install">
			gamin
		</package>
		<package action="install">
			hotkey-setup
		</package>
		<package action="install">
			iceweasel
		</package>
		<package action="install">
			menu
		</package>
		<package action="install">
			shared-mime-info
		</package>
		<package action="install">
			x11-utils
		</package>
		<package action="install">
			xdg-utils
		</package>
		<package action="install">
			xxdiff
		</package>
	</packages>
	<environ>
		<trait_variable name="desktop_1_name" trait="desktop_base">
			main
		</trait_variable>
		<trait_variable name="desktop_2_name" trait="desktop_base">
			email
		</trait_variable>
		<trait_variable name="desktop_3_name" trait="desktop_base">
			chat
		</trait_variable>
		<trait_variable name="desktop_4_name" trait="desktop_base">
			misc
		</trait_variable>
		<trait_variable name="desktop_5_name" trait="desktop_base">
			create
		</trait_variable>
		<trait_variable name="desktop_6_name" trait="desktop_base">
			music
		</trait_variable>
		<trait_variable name="x_cursor_theme" trait="desktop_base">
			ComixCursors-Blue-Small
		</trait_variable>
		<trait_variable name="xxdiff_dir_diff_recursive" trait="desktop_base">
			True
		</trait_variable>
		<trait_variable name="xxdiff_dir_diff_recursive_command" trait="desktop_base">
			diff -q -s -r --exclude=.svn --exclude=SCCS --exclude=CVS --exclude=*.pyc --exclude=*~
		</trait_variable>
		<trait_variable name="xxdiff_edit_left" trait="desktop_base">
			Ctrl+[
		</trait_variable>
		<trait_variable name="xxdiff_editor" trait="desktop_base">
			editor
		</trait_variable>
		<trait_variable name="xxdiff_edit_right" trait="desktop_base">
			Ctrl+]
		</trait_variable>
		<trait_variable name="xxdiff_font" trait="desktop_base">
			Bitstream Vera Sans Mono,7,-1,5,50,0,0,0,0,0
		</trait_variable>
		<trait_variable name="xxdiff_show_toolbar" trait="desktop_base">
			True
		</trait_variable>
	</environ>
	<templates>
		<template grp_owner="root" mode="0644" owner="root">
			etc/skel/.xxdiffrc
		</template>
	</templates>
	<scripts>
		<script name="config"/>
	</scripts>
</trait>
