		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/kde3/konsolerc
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/kde3/kpersonalizerrc
		</template>
		<template grp_owner="root" mode="0644" owner="root">
