		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/kde3/paelladefaults.khotkeys
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/kde3/share/apps/khotkeys/paelladefaults.khotkeys
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			usr/share/autostart/gkrellm.desktop
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			usr/share/autostart/khotkeys-update-paelladefaults.desktop
		</template>
	</templates>
	<scripts>
		<script name="config"/>
		<script name="post"/>
		<script name="pre"/>
	</scripts>
</trait>
