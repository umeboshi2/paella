<trait name="boot_server">
	<parents>
		<parent>
			base_server
		</parent>
	</parents>
	<packages>
		<package action="install">
			syslinux
		</package>
		<package action="install">
			tftpd-hpa
		</package>
	</packages>
	<environ/>
	<templates>
		<template grp_owner="root" mode="0644" owner="root">
			etc/default/tftpd-hpa
		</template>
	</templates>
	<scripts>
		<script name="chroot"/>
		<script name="post"/>
	</scripts>
</trait>
