<trait name="clockserver">
	<parents>
		<parent>
			base_server
		</parent>
	</parents>
	<packages>
		<package action="install">
			ntp
		</package>
	</packages>
	<environ/>
	<templates>
		<template grp_owner="root" mode="0644" owner="root">
			etc/default/ntp
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/ntp.conf
		</template>
	</templates>
	<scripts/>
</trait>
