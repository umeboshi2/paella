<trait name="nameserver">
	<parents>
		<parent>
			base_server
		</parent>
	</parents>
	<packages>
		<package action="install">
			bind9
		</package>
		<package action="install">
			dnsutils
		</package>
	</packages>
	<environ>
		<trait_variable name="resolvconf" trait="nameserver">
			no
		</trait_variable>
		<trait_variable name="startup_options" trait="nameserver">
			-u bind
		</trait_variable>
	</environ>
	<templates>
		<template grp_owner="bind" mode="0644" owner="root">
			etc/bind/named.conf
		</template>
		<template grp_owner="bind" mode="0644" owner="root">
			etc/bind/named.conf.local
		</template>
		<template grp_owner="bind" mode="0644" owner="root">
			etc/bind/named.conf.options
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/default/bind9
		</template>
	</templates>
	<scripts>
		<script name="chroot"/>
	</scripts>
</trait>
