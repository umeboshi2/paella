<trait name="base" suite="startup">
	<description>
		None
	</description>
	<parents>
		<parent>
			global
		</parent>
	</parents>
	<packages>
		<package action="install">
			bzip2
		</package>
		<package action="install">
			console-common
		</package>
		<package action="reconfig">
			console-common
		</package>
		<package action="install">
			console-data
		</package>
		<package action="reconfig">
			console-data
		</package>
		<package action="reconfig">
			debconf
		</package>
		<package action="install">
			expect
		</package>
		<package action="install">
			gawk
		</package>
		<package action="reconfig">
			netbase
		</package>
		<package action="reconfig">
			passwd
		</package>
		<package action="install">
			sudo
		</package>
		<package action="install">
			udev
		</package>
	</packages>
	<environ>
		<trait_variable name="adduser_add_extra_groups" trait="base">
			0
		</trait_variable>
		<trait_variable name="adduser_dhome" trait="base">
			/home
		</trait_variable>
		<trait_variable name="adduser_dirmode" trait="base">
			0755
		</trait_variable>
		<trait_variable name="adduser_dshell" trait="base">
			/bin/bash
		</trait_variable>
		<trait_variable name="adduser_extra_groups" trait="base">
			dialout cdrom floppy audio src video lp src users
		</trait_variable>
		<trait_variable name="adduser_skel" trait="base">
			/etc/skel
		</trait_variable>
		<trait_variable name="adduser_usergroups" trait="base">
			yes
		</trait_variable>
		<trait_variable name="adduser_users_gid" trait="base">
			100
		</trait_variable>
		<trait_variable name="distribution" trait="base">
			Paella/Debian
		</trait_variable>
		<trait_variable name="do_dselect_upgrade" trait="base">
			False
		</trait_variable>
		<trait_variable name="issueOS" trait="base">
			GNU/Linux
		</trait_variable>
		<trait_variable name="issue_version" trait="base">
			4.0
		</trait_variable>
		<trait_variable name="user_umask" trait="base">
			022
		</trait_variable>
	</environ>
	<templates>
		<template grp_owner="root" mode="0644" owner="root">
			etc/adduser.conf
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/bash.bashrc
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/crontab
		</template>
		<template grp_owner="root" mode="0755" owner="root">
			etc/default/klogd
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/group
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/hostname
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/issue
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/issue.net
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/login.defs
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/mailname
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/nanorc
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/passwd
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			etc/profile
		</template>
		<template grp_owner="root" mode="0440" owner="root">
			etc/sudoers
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			root/base-debconf-unconfigured
		</template>
		<template grp_owner="root" mode="0644" owner="root">
			root/paella/trashcan/z26_persistent-net.rules
		</template>
	</templates>
	<scripts>
		<script name="pre"/>
	</scripts>
</trait>
