<trait name="boot_server" suite="startup">
	<description>
		None
	</description>
	<parents>
		<parent>
			base_server
		</parent>
	</parents>
	<packages>
		<package action="install">
			syslinux
		</package>
		<package action="install">
			tftpd-hpa
		</package>
	</packages>
	<environ>
		<trait_variable name="default_kernel" trait="boot_server">
			linux-image-2.6.18-4-486
		</trait_variable>
	</environ>
	<templates>
		<template grp_owner="root" mode="0644" owner="root">
			etc/default/tftpd-hpa
		</template>
		<template grp_owner="root" mode="0755" owner="root">
			root/boot_server_post_script
		</template>
	</templates>
	<scripts>
		<script name="chroot"/>
		<script name="post"/>
		<script name="pre"/>
	</scripts>
</trait>
