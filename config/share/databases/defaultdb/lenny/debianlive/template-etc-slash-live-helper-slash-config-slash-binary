# config/binary - options for live-helper(7), binary stage

# $LH_BINARY_FILESYSTEM: set image filesystem
# (Default: fat16)
LH_BINARY_FILESYSTEM="<--|debianlive:lh_binary_filesystem|-->"

# $LH_BINARY_IMAGES: set image type
# (Default: iso)
LH_BINARY_IMAGES="<--|debianlive:lh_binary_images|-->"

# $LH_BINARY_INDICES: set apt/aptitude generic indices
# (Default: enabled)
LH_BINARY_INDICES="<--|debianlive:lh_binary_indices|-->"

# $LH_BOOTAPPEND_LIVE: set boot parameters
# (Default: empty)
LH_BOOTAPPEND_LIVE="<--|debianlive:lh_bootappend_live|-->"

# $LH_BOOTAPPEND_INSTALL: set boot parameters
# (Default: empty)
LH_BOOTAPPEND_INSTALL=" <--|debianlive:lh_bootappend_install|-->"

# $LH_BOOTLOADER: set bootloader
# (Default: syslinux)
LH_BOOTLOADER="<--|debianlive:lh_bootloader|-->"

# $LH_CHECKSUMS: set checksums
# (Default: enabled)
LH_CHECKSUMS="<--|debianlive:lh_checksums|-->"

# ${LH_CHROOT_BUILD: control if we build binary images chrooted
# (Default: enabled)
# DO NEVER, *NEVER*, *N*E*V*E*R* SET THIS OPTION to disabled.
LH_CHROOT_BUILD="enabled"

# $LH_DEBIAN_INSTALLER: set debian-installer
# (Default: disabled)
LH_DEBIAN_INSTALLER="<--|debianlive:lh_debian_installer|-->"

# $LH_DEBIAN_INSTALLER_DISTRIBUTION: set debian-installer suite
# (Default: empty)
LH_DEBIAN_INSTALLER_DISTRIBUTION="<--|debianlive:lh_debian_installer_distribution|-->"

# $LH_DEBIAN_INSTALLER_PRESEEDFILE: set debian-installer preseed filename/url
# (Default: )
LH_DEBIAN_INSTALLER_PRESEEDFILE="<--|debianlive:lh_debian_installer_preseedfile|-->"

# $LH_ENCRYPTION: set encryption
# (Default: disabled)
LH_ENCRYPTION="<--|debianlive:lh_encryption|-->"

# $LH_GRUB_SPLASH: set custom grub splash
# (Default: empty)
LH_GRUB_SPLASH=""

# $LH_HOSTNAME: set hostname
# (Default: debian)
LH_HOSTNAME="<--|debianlive:lh_hostname|-->"

# $LH_ISO_APPLICATION: set iso author
# (Default: Debian Live)
LH_ISO_APPLICATION="<--|debianlive:lh_iso_application|-->"

# $LH_ISO_PREPARER: set iso preparer
# (Default: live-helper $VERSION; http://packages.qa.debian.org/live-helper)
LH_ISO_PREPARER="<--|debianlive:lh_iso_preparer|-->"

# $LH_ISO_PUBLISHER: set iso publisher
# (Default: Debian Live project; http://debian-live.alioth.debian.org/; debian-live@lists.debian.org)
LH_ISO_PUBLISHER="<--|debianlive:lh_iso_publisher|-->"

# $LH_ISO_VOLUME: set iso volume (max 32 chars)
# (Default: Debian Live lenny $(date +%Y%m%d-%H:%M))
LH_ISO_VOLUME="<--|debianlive:lh_iso_volume|-->"

# $LH_JFFS2_ERASEBLOCK: set jffs2 eraseblock size
# (Default: unset)
LH_JFFS2_ERASEBLOCK="<--|debianlive:lh_jffs2_eraseblock|-->"

# $LH_MEMTEST: set memtest
# (Default: memtest86+)
LH_MEMTEST="<--|debianlive:lh_memtest|-->"

# $LH_WIN32_LOADER: set win32-loader
# (Default: disabled)
LH_WIN32_LOADER="<--|debianlive:lh_win32_loader|-->"

# $LH_NET_ROOT_FILESYSTEM: set netboot filesystem
# (Default: nfs)
LH_NET_ROOT_FILESYSTEM="<--|debianlive:lh_net_root_filesystem|-->"

# $LH_NET_ROOT_MOUNTOPTIONS: set nfsopts
# (Default: empty)
LH_NET_ROOT_MOUNTOPTIONS="<--|debianlive:lh_net_root_mountoptions|-->"

# $LH_NET_ROOT_PATH: set netboot server directory
# (Default: /srv/debian-live)
LH_NET_ROOT_PATH="<--|debianlive:lh_net_root_path|-->"

# $LH_NET_ROOT_SERVER: set netboot server address
# (Default: 192.168.1.1)
LH_NET_ROOT_SERVER="<--|debianlive:lh_net_root_server|-->"

# $LH_NET_COW_FILESYSTEM: set net client cow filesystem
# (Default: nfs)
LH_NET_COW_FILESYSTEM="<--|debianlive:lh_net_cow_filesystem|-->"

# $LH_NET_COW_MOUNTOPTIONS: set cow mount options
# (Default: empty)
LH_NET_COW_MOUNTOPTIONS="<--|debianlive:lh_net_cow_mountoptions|-->"

# $LH_NET_COW_PATH: set cow directory
# (Default: )
LH_NET_COW_PATH="<--|debianlive:lh_net_cow_path|-->"

# $LH_NET_COW_SERVER: set cow server
# (Default: )
LH_NET_COW_SERVER="<--|debianlive:lh_net_cow_server|-->"

# $LH_NET_TARBALL: set net tarball
# (Default: gzip)
LH_NET_TARBALL="<--|debianlive:lh_net_tarball|-->"

# $LH_SYSLINUX_SPLASH: set custom syslinux splash
# (Default: empty)
LH_SYSLINUX_SPLASH="<--|debianlive:lh_syslinux_splash|-->"

# $LH_SYSLINUX_TIMEOUT: set custom syslinux timeout in seconds
# (Default: 0)
LH_SYSLINUX_TIMEOUT="<--|debianlive:lh_syslinux_timeout|-->"

# $LH_SYSLINUX_CFG: set custom syslinux configuration file
# (Default: empty)
LH_SYSLINUX_CFG="<--|debianlive:lh_syslinux_cfg|-->"

# $LH_SYSLINUX_MENU: set syslinux menu
# (Default: disabled)
LH_SYSLINUX_MENU="<--|debianlive:lh_syslinux_menu|-->"

# $LH_SYSLINUX_MENU_LIVE_ENTRY: set text to be used on the menu for live entries
# (Default: Start Debian Live)
LH_SYSLINUX_MENU_LIVE_ENTRY="<--|debianlive:lh_syslinux_menu_live_entry|-->"

# $LH_SYSLINUX_MENU_LIVE_FAILSAFE_ENTRY: set text to be used on the menu for live entries (failsafe ones)
# (Default: )
LH_SYSLINUX_MENU_LIVE_FAILSAFE_ENTRY="<--|debianlive:lh_syslinux_menu_live_failsafe_entry|-->"

# $LH_SYSLINUX_MENU_MEMTEST_ENTRY: set text to be used on the menu for memtest entry
# (Default: Memory test)
LH_SYSLINUX_MENU_MEMTEST_ENTRY="<--|debianlive:lh_syslinux_menu_memtest_entry|-->"

# $LH_USERNAME: set username
# (Default: user)
LH_USERNAME="<--|debianlive:lh_username|-->"


# to help make images quicker
MKSQUASHFS_OPTIONS="<--|debianlive:mksquashfs_options|-->"
