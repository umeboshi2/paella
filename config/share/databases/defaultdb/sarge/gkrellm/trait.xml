<trait name="gkrellm" suite="sarge">
	<description/>
	<parents>
		<parent>
			default
		</parent>
	</parents>
	<packages>
		<package action="install">
			gkrellm
		</package>
		<package action="install">
			gkrellm-bfm
		</package>
		<package action="install">
			gkrellm-common
		</package>
		<package action="install">
			gkrellm-skins
		</package>
		<package action="install">
			gkrellm-x86info
		</package>
		<package action="install">
			gkrellmd
		</package>
		<package action="install">
			gkrellmitime
		</package>
		<package action="install">
			gkrellweather
		</package>
	</packages>
	<environ>
		<bfm_launch>
			x-terminal-emulator  -e bash -c &quot;ps aufx | pager&quot;
		</bfm_launch>
		<bigfont>
			Sans 11
		</bigfont>
		<cpu_launch>
			x-terminal-emulator -e bash -c &quot;cat /proc/cpuinfo | pager&quot;
		</cpu_launch>
		<disk_launch>
			x-terminal-emulator -e bash -c &quot;watch -n1 df -h&quot;
		</disk_launch>
		<lgfont>
			Sans 9
		</lgfont>
		<medfont>
			Sans 10
		</medfont>
		<mem_launch>
			x-terminal-emulator -e bash -c &quot;watch -n1 cat /proc/meminfo&quot;
		</mem_launch>
		<proc_launch>
			x-terminal-emulator -e top
		</proc_launch>
		<smfont>
			Sans 9
		</smfont>
		<theme>
			Jewel_gkrellm
		</theme>
		<uptime_launch>
			x-terminal-emulator
		</uptime_launch>
	</environ>
	<templates>
		<template grp_owner="root" mode="0640" owner="root" package="gkrellm">
			etc/skel/.gkrellm2/data/startup_position
		</template>
		<template grp_owner="root" mode="0640" owner="root" package="gkrellm">
			etc/skel/.gkrellm2/plugin_enable
		</template>
		<template grp_owner="root" mode="0640" owner="root" package="gkrellm">
			etc/skel/.gkrellm2/plugin_placement
		</template>
		<template grp_owner="root" mode="0640" owner="root" package="gkrellm">
			etc/skel/.gkrellm2/theme_config
		</template>
		<template grp_owner="root" mode="0600" owner="root" package="gkrellm">
			etc/skel/.gkrellm2/user-config
		</template>
	</templates>
	<debconfiguration/>
	<scripts>
		<script name="chroot"/>
	</scripts>
</trait>
