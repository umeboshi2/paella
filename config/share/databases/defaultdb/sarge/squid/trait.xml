<trait name="squid" suite="sarge">
	<description>
		None
	</description>
	<parents>
		<parent>
			localnet
		</parent>
	</parents>
	<packages>
		<package action="install">
			squid
		</package>
		<package action="install">
			squidclient
		</package>
		<package action="install">
			squidguard
		</package>
	</packages>
	<environ/>
	<templates>
		<template grp_owner="root" mode="0100644" owner="root" package="squid">
			etc/default/squid
		</template>
		<template grp_owner="root" mode="0100600" owner="root" package="squid">
			etc/squid/squid.conf
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="squid">
			var/cache/debconf/config.dat
		</template>
		<template grp_owner="root" mode="0100644" owner="root" package="squidguard">
			etc/default/squidguard
		</template>
		<template grp_owner="root" mode="0100644" owner="root" package="squidguard">
			etc/squid/squidGuard.conf
		</template>
	</templates>
	<scripts/>
</trait>
