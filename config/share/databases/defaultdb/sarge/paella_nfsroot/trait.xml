<trait name="paella_nfsroot" suite="sarge">
	<description/>
	<parents>
		<parent>
			paella_installer
		</parent>
		<parent>
			simple_nfsroot
		</parent>
	</parents>
	<packages>
		<package action="install">
			hdparm
		</package>
		<package action="install">
			initscripts
		</package>
		<package action="install">
			jfsutils
		</package>
		<package action="install">
			libpam-pgsql
		</package>
		<package action="install">
			module-init-tools
		</package>
		<package action="install">
			parted
		</package>
		<package action="install">
			reiserfsprogs
		</package>
		<package action="install">
			xfsprogs
		</package>
	</packages>
	<environ>
		<dbhost>
			10.0.0.1
		</dbhost>
		<kmods>
			via82cxxx, ide-core, ide-disk, ide-generic
		</kmods>
	</environ>
	<templates>
		<template grp_owner="root" mode="0644" owner="root" package="initscripts">
			etc/paellarc
		</template>
	</templates>
	<debconfiguration/>
	<scripts>
		<script name="chroot"/>
		<script name="pre"/>
	</scripts>
</trait>
