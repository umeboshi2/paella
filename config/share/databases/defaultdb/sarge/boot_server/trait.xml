<trait name="boot_server" suite="sarge">
	<description>
		None
	</description>
	<parents>
		<parent>
			localnet
		</parent>
	</parents>
	<packages>
		<package action="install">
			tftpd-hpa
		</package>
	</packages>
	<environ>
		<diskless_kernel>
			kernel-image-2.6.3diskless
		</diskless_kernel>
		<label>
			diskless
		</label>
		<mount_devfs>
			nomount
		</mount_devfs>
	</environ>
	<templates>
		<template grp_owner="root" mode="0644" owner="root" package="tftp-hpa">
			boot/paella/pxelinux.cfg/default
		</template>
	</templates>
	<scripts>
		<script name="chroot"/>
		<script name="pre"/>
	</scripts>
</trait>
