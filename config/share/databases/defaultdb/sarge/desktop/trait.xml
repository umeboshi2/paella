<trait name="desktop" suite="sarge">
	<description/>
	<parents>
		<parent>
			gkrellm
		</parent>
		<parent>
			graphics_editor
		</parent>
		<parent>
			subversion
		</parent>
	</parents>
	<packages>
		<package action="install">
			gdm
		</package>
		<package action="install">
			gdm-themes
		</package>
		<package action="install">
			lpr
		</package>
		<package action="install">
			menu
		</package>
		<package action="install">
			mozilla-browser
		</package>
		<package action="install">
			mozilla-firebird
		</package>
		<package action="install">
			mozilla-mailnews
		</package>
		<package action="install">
			mozilla-psm
		</package>
		<package action="install">
			mozilla-thunderbird
		</package>
		<package action="install">
			xchat
		</package>
		<package action="install">
			xchat-common
		</package>
	</packages>
	<environ>
		<desktop1>
			main
		</desktop1>
		<desktop2>
			email
		</desktop2>
		<desktop3>
			chat
		</desktop3>
		<desktop4>
			misc
		</desktop4>
		<desktop5>
			create
		</desktop5>
		<desktop6>
			music
		</desktop6>
		<gdm_bgprog>
			/usr/lib/xscreensaver/squiral -root
		</gdm_bgprog>
		<gdm_bgtype>
			0
		</gdm_bgtype>
		<kmods>
			psmouse, mousedev, hid, ohci-hcd, uhci-hcd, ehci-hcd
		</kmods>
	</environ>
	<templates>
		<template grp_owner="root" mode="0644" owner="root" package="gdm">
			etc/gdm/gdm.conf
		</template>
	</templates>
	<debconfiguration/>
	<scripts>
		<script name="post"/>
	</scripts>
</trait>
