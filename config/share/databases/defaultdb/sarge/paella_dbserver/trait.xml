<trait name="paella_dbserver" suite="sarge">
	<description>
		None
	</description>
	<parents>
		<parent>
			boot_server
		</parent>
		<parent>
			diskless_server
		</parent>
		<parent>
			paella_common
		</parent>
		<parent>
			postgres
		</parent>
		<parent>
			subversion
		</parent>
		<parent>
			webserver
		</parent>
	</parents>
	<packages>
		<package action="install">
			postgresql
		</package>
		<package action="install">
			postgresql-client
		</package>
		<package action="install">
			postgresql-contrib
		</package>
	</packages>
	<environ>
		<debrepos_on_usbdisk>
			false
		</debrepos_on_usbdisk>
	</environ>
	<templates>
		<template grp_owner="root" mode="0644" owner="root" package="postgresql">
			etc/paellarc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="postgresql">
			etc/postgresql/pg_hba.conf
		</template>
	</templates>
	<scripts>
		<script name="chroot"/>
		<script name="pre"/>
	</scripts>
</trait>
