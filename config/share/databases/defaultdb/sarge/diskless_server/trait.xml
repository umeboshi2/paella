<trait name="diskless_server" suite="sarge">
	<description/>
	<parents>
		<parent>
			diskless_common
		</parent>
		<parent>
			nfs_server
		</parent>
	</parents>
	<packages>
		<package action="install">
			diskless
		</package>
	</packages>
	<environ>
		<diskless_profile>
			$default_diskless_profile
		</diskless_profile>
		<diskless_roots_path>
			$default_diskless_roots
		</diskless_roots_path>
		<install_diskless>
			true
		</install_diskless>
		<netmask>
			255.0.0.0
		</netmask>
		<nis_domain>
			homeland
		</nis_domain>
		<nis_netword>
			10.0.0.0
		</nis_netword>
	</environ>
	<templates>
		<template grp_owner="root" mode="0100754" owner="root" package="diskless">
			root/paella/setup/setup_diskless.py
		</template>
	</templates>
	<debconfiguration/>
	<scripts>
		<script name="post"/>
		<script name="pre"/>
	</scripts>
</trait>
