<trait name="kde" suite="sarge">
	<description>
		None
	</description>
	<parents>
		<parent>
			desktop
		</parent>
	</parents>
	<packages>
		<package action="install">
			fontconfig
		</package>
		<package action="install">
			gtk2-engines-gtk-qt
		</package>
		<package action="install">
			kaquarium
		</package>
		<package action="install">
			kde-icons-crystal
		</package>
		<package action="install">
			kde-icons-noia
		</package>
		<package action="install">
			kdeaddons
		</package>
		<package action="install">
			kdeadmin
		</package>
		<package action="install">
			kdeartwork
		</package>
		<package action="install">
			kdeartwork-misc
		</package>
		<package action="install">
			kdeartwork-style
		</package>
		<package action="install">
			kdeartwork-theme-icon
		</package>
		<package action="install">
			kdeartwork-theme-window
		</package>
		<package action="install">
			kdebase
		</package>
		<package action="install">
			kdeedu
		</package>
		<package action="install">
			kdelibs
		</package>
		<package action="install">
			kdemultimedia
		</package>
		<package action="install">
			kdenetwork
		</package>
		<package action="install">
			kdepim
		</package>
		<package action="install">
			kdeutils
		</package>
		<package action="install">
			kdiff3
		</package>
		<package action="install">
			kontact
		</package>
		<package action="install">
			quanta
		</package>
	</packages>
	<environ>
		<colorscheme>
			Mine Green.kcsrc
		</colorscheme>
		<cursor_theme>
			whiteglass
		</cursor_theme>
		<fixed_font>
			courier,9,-1,5,50,0,0,0,0,0
		</fixed_font>
		<general_font>
			helvetica,10,-1,5,50,0,0,0,0,0
		</general_font>
		<icon_theme>
			noia_kde_100
		</icon_theme>
		<kdesktop_fm_standard_font>
			helvetica,12,-1,5,50,0,0,0,0,0
		</kdesktop_fm_standard_font>
		<knotes_font>
			helvetica,8,-1,5,50,0,0,0,0,0
		</knotes_font>
		<knotes_titlefont>
			helvetica,10,-1,5,75,0,0,0,0,0
		</knotes_titlefont>
		<ksplash_theme>
			DebianEvolution
		</ksplash_theme>
		<menu_font>
			$kde_general_font
		</menu_font>
		<taskbar_font>
			helvetica,11,-1,5,50,0,0,0,0,0
		</taskbar_font>
		<toolbar_font>
			$kde_general_font
		</toolbar_font>
		<wallpaper>
			/usr/share/wallpapers/kitchen.jpg
		</wallpaper>
		<widget_style>
			default
		</widget_style>
		<wm_active_font>
			helvetica,10,-1,5,75,0,0,0,0,0
		</wm_active_font>
	</environ>
	<templates>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/clock_panelapplet_main_rc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kaquarium_panelappletrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kcmdisplayrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kconf_updaterc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kcontrolrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kcookiejarrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kdeglobals
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kdesktoprc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/khotkeysrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kickerrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kioslaverc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/knotesrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/konquerorrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kpersonalizerrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/ksplashrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/ktaskbarrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kwin.eventsrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/kwinrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/launcher_panelapplet_main_rc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/rssservicerc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/kde3/uiserverrc
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/skel/.kde/share/apps/knotes/notes/.KNote 1_data
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/skel/.kde/share/apps/knotes/notes/KNote 1
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			etc/skel/.kde/share/apps/konqueror/profiles/filemanagement
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="kdebase">
			usr/share/apps/kdisplay/app-defaults/XTerm.ad
		</template>
	</templates>
	<scripts>
		<script name="chroot"/>
	</scripts>
</trait>
