#! /bin/sh
# postinst script for webmin
#
# see: dh_installdeb(1)

set -e

# Source debconf library.
. /usr/share/debconf/confmodule
db_version 2.0

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see /usr/doc/packaging-manual/
#
# quoting from the policy:
#     Any necessary prompting should almost always be confined to the
#     post-installation script, and should be protected with a conditional
#     so that unnecessary prompting doesn't happen if a package's
#     installation fails and the `postinst' is called with `abort-upgrade',
#     `abort-remove' or `abort-deconfigure'.

case "$1" in
    configure)
	if [ ! -f /etc/webmin/miniserv.users ]; then
		if [ -f /etc/shadow ]; then
			grep '^root:' /etc/shadow | \
			cut -d ':' -f1,2  > /etc/webmin/miniserv.users
			chown root:shadow /etc/webmin/miniserv.users
		else
	  		grep '^root:' /etc/passwd | \
	  		cut -d ':' -f1,2  > /etc/webmin/miniserv.users
	  		chown root:root /etc/webmin/miniserv.users
		fi
	fi
	chmod 640 /etc/webmin/miniserv.users
	db_get webmin/hostname
	TEMPFILE=`/bin/tempfile --directory=/etc/webmin`
	[ -f /etc/webmin/miniserv.conf ] && \
	(sed -e '/^host=$/s/^host=$/host='${RET:-`hostname`}'/' /etc/webmin/miniserv.conf > $TEMPFILE && \
	mv $TEMPFILE /etc/webmin/miniserv.conf)
	[ -f $TEMPFILE ] && rm -f $TEMPFILE
	cd /etc/webmin
	PATH=$PATH:/usr/bin/ssl
	if [ -f miniserv.pem -a "`md5sum miniserv.pem | cut -d' ' -f1`" != "2bb1926297df3d0429be3a4cd00b43ce" ]; then
		echo "You already have /etc/webmin/miniserv.pem"
	else
		#HOSTNAME=`hostname -s`
		#DOMAINNAME=`hostname -d`
    		HOSTNAME=<--|global_hostname|-->
		DOMAINNAME=<--|global_domain|-->
		openssl req -newkey rsa:512 -x509 -days 1825 -nodes -out miniserv.pem \
		-keyout miniserv.pem > /dev/null 2>&1 <<+
.
.
.
Webmin Webserver
$HOSTNAME.$DOMAINNAME
*
root@$HOSTNAME.$DOMAINNAME
+
		ln -sf miniserv.pem `openssl x509 -noout -hash < miniserv.pem`.0
	fi

	chown root.root /etc/webmin/miniserv.pem
	chmod 0640 /etc/webmin/miniserv.pem

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit
if [ -x "/etc/init.d/webmin" ]; then
	update-rc.d webmin defaults >/dev/null
	if [ -x /usr/sbin/invoke-rc.d ]; then
		invoke-rc.d webmin start
	else
		/etc/init.d/webmin start
	fi
fi
# End automatically added section


exit 0
