<trait name="clock" suite="sarge">
	<description>
		None
	</description>
	<parents>
		<parent>
			default
		</parent>
		<parent>
			localnet
		</parent>
	</parents>
	<packages>
		<package action="install">
			ntp
		</package>
		<package action="install">
			ntp-simple
		</package>
	</packages>
	<environ>
		<clockserver>
			$localnet_ntpserver
		</clockserver>
	</environ>
	<templates>
		<template grp_owner="root" mode="0100600" owner="root" package="base-files">
			var/cache/debconf/config.dat
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="ntp">
			etc/default/ntpdate
		</template>
	</templates>
	<scripts/>
</trait>
