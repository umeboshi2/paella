<trait name="builder" suite="startup">
	<description>
		None
	</description>
	<parents>
		<parent>
			development_debian
		</parent>
	</parents>
	<packages>
		<package action="install">
			debootstrap
		</package>
		<package action="install">
			pbuilder
		</package>
	</packages>
	<environ>
		<trait_variable name="debootstrap" trait="builder">
			cdebootstrap
		</trait_variable>
		<trait_variable name="distribution" trait="builder">
			etch
		</trait_variable>
		<trait_variable name="mirrorsite" trait="builder">
			http://ftp.jp.debian.org/debian
		</trait_variable>
		<trait_variable name="pbuilder_path" trait="builder">
			/var/cache/pbuilder
		</trait_variable>
	</environ>
	<templates>
		<template grp_owner="root" mode="0644" owner="root">
			etc/pbuilderrc
		</template>
	</templates>
	<scripts/>
</trait>
