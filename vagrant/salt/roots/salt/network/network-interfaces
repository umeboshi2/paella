# This file has been created to assign an ip address
# to the secondary network interface on the vagrant machine.
auto lo
iface lo inet loopback

allow-hotplug eth0
iface eth0 inet dhcp

auto eth1
iface eth1 inet static
      address ${pillar['paella_server_ip']}
      netmask 255.255.255.128

pre-up sleep 2

