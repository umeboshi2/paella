ui vesamenu.c32
prompt 0
timeout 100

menu background splash.png
#menu vshift 13
menu color unsel 37;44 #ffcccc55 #cc222200 std
menu color tabmsg 37;44 #ffcccc55 #cc222200 std
menu color sel 7;37;40 #ffcccc55 #ff555555 all
menu color cmdline 37;44 #ffcccc55 #cc222200 std
menu color unsel 37;44 #ffcccc55 #cc222200 std
menu color title 1;36;44 #ffcccc55 #cc220000 std
menu color border 0 #00ffffff #00000000 std

# The default is to boot from the hard drive.  If a 
# machine needs to default to a netboot system, it 
# should get a specific pxe config before reaching
# this file.
default harddisk
menu title Network Boot Menu

label harddisk
      menu label Boot from Hard Disk
      kernel chain.c32
      append hd0 0

include live-amd64.cfg Standard Live System (amd64)
include live-i386.cfg Standard Live System (i386)


include installer/i386/installer.cfg Test Install


label WinPEshell 
      menu label WinPE Shell
      kernel memdisk
      append iso initrd=http://${pillar['paella']['paella_server_ip']}/debrepos/winpe-shell.iso


label WinPEinstall
      menu label WinPE Auto Install
      kernel memdisk
      append iso initrd=http://${pillar['paella']['paella_server_ip']}/debrepos/winpe.iso

label WinPEinstall64
      menu label WinPE Auto Install amd64
      kernel memdisk
      append iso initrd=http://${pillar['paella']['paella_server_ip']}/debrepos/winpe64.iso

