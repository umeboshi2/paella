  __BUBBLE1_ICLASS cloud1_iclass;\
  __BUBBLE2_ICLASS cloud2_iclass;\
  __BUBBLE3_ICLASS cloud3_iclass;\
  __BUBBLE4_ICLASS cloud4_iclass;\
  __TOOLTIP_HELP_ICON logo;\
  __TCLASS tclass;\
  __DISTANCE distance;\
__END

