<trait name="dhcp_server" suite="sarge">
	<description/>
	<parents>
		<parent>
			localnet
		</parent>
	</parents>
	<packages>
		<package action="install">
			dhcp3-common
		</package>
		<package action="install">
			dhcp3-server
		</package>
	</packages>
	<environ>
		<authoritative>
			#authoritative
		</authoritative>
		<ddns_update_style>
			interim
		</ddns_update_style>
		<default_lease_time>
			600
		</default_lease_time>
		<main_netmask>
			255.0.0.0
		</main_netmask>
		<main_range>
			10.0.0.51 10.0.0.253
		</main_range>
		<main_router>
			10.0.0.1
		</main_router>
		<main_subnet>
			10.0.0.0
		</main_subnet>
		<max_lease_time>
			7200
		</max_lease_time>
		<network_interfaces>
			eth1
		</network_interfaces>
	</environ>
	<templates>
		<template grp_owner="root" mode="0100644" owner="root" package="dhcp3-server">
			etc/default/dhcp3-server
		</template>
		<template grp_owner="root" mode="0100644" owner="root" package="dhcp3-server">
			etc/dhcp3/dhcpd.conf
		</template>
		<template grp_owner="root" mode="0644" owner="root" package="dhcp3-server">
			var/cache/debconf/config.dat
		</template>
	</templates>
	<debconfiguration/>
	<scripts>
		<script name="post"/>
	</scripts>
</trait>
