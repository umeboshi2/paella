<trait name="ipsec" suite="sarge">
	<description/>
	<parents>
		<parent>
			default
		</parent>
		<parent>
			localnet
		</parent>
	</parents>
	<packages>
		<package action="install">
			freeswan
		</package>
		<package action="install">
			ipsec-tools
		</package>
	</packages>
	<environ>
		<create_rsa_key>
			true
		</create_rsa_key>
		<enable_oe>
			false
		</enable_oe>
		<existing_x509_certificate>
			true
		</existing_x509_certificate>
		<existing_x509_certificate_filename>
			/etc/ssl/cacert.crt
		</existing_x509_certificate_filename>
		<existing_x509_key_filename>
			/etc/ssl/private/secreckey.pem
		</existing_x509_key_filename>
		<restart>
			true
		</restart>
		<rsa_key_length>
			2048
		</rsa_key_length>
		<rsa_key_type>
			x509
		</rsa_key_type>
		<start_level>
			earliest
		</start_level>
	</environ>
	<templates>
		<template grp_owner="root" mode="0644" owner="root" package="freeswan">
			var/cache/debconf/config.dat
		</template>
	</templates>
	<debconfiguration/>
	<scripts/>
</trait>
