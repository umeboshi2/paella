<trait name="builder" suite="sarge">
	<description/>
	<parents>
		<parent>
			default
		</parent>
	</parents>
	<packages>
		<package action="install">
			build-essential
		</package>
		<package action="install">
			bzip2
		</package>
		<package action="install">
			cvs
		</package>
		<package action="install">
			debhelper
		</package>
		<package action="install">
			devfsd
		</package>
