		<kdesktop_fm_standard_font>
			helvetica,12,-1,5,50,0,0,0,0,0
		</kdesktop_fm_standard_font>
		<knotes_font>
			helvetica,8,-1,5,50,0,0,0,0,0
		</knotes_font>
		<knotes_titlefont>
			helvetica,10,-1,5,75,0,0,0,0,0
		</knotes_titlefont>
		<ksplash_theme>
			DebianEvolution
		</ksplash_theme>
		<menu_font>
			$kde_general_font
		</menu_font>
		<taskbar_font>
			helvetica,11,-1,5,50,0,0,0,0,0
		</taskbar_font>
		<toolbar_font>
			$kde_general_font
		</toolbar_font>
		<wm_active_font>
			helvetica,10,-1,5,75,0,0,0,0,0
		</wm_active_font>
	</environ>
