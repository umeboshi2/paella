		<colorscheme>
			Mine Green.kcsrc
		</colorscheme>
		<cursor_theme>
			whiteglass
		</cursor_theme>
		<fixed_font>
			courier,9,-1,5,50,0,0,0,0,0
		</fixed_font>
		<general_font>
			helvetica,10,-1,5,50,0,0,0,0,0
